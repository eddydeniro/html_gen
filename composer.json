{
    "name": "oscarotero/html",
    "type": "library",
    "description": "HTML generator",
    "keywords": ["html"],
    "homepage": "https://github.com/oscarotero/html",
    "license": "MIT",
    "authors": [
        {
            "name": "Oscar Otero",
            "email": "oom@oscarotero.com",
            "homepage": "http://oscarotero.com",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "oom@oscarotero.com",
        "issues": "https://github.com/oscarotero/html/issues"
    },
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "friendsofphp/php-cs-fixer": "^2.14",
        "oscarotero/php-cs-fixer-config": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Html\\": "src"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Html\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-fix": "php-cs-fixer fix"
    }
}
